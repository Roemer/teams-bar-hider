<Window x:Class="TeamsBarHider.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TeamsBarHider"
        mc:Ignorable="d"
        Title="Teams Bar Hider" Height="200" Width="200">
    <Grid>
        <Grid.ColumnDefinitions>
			<ColumnDefinition Width="1*" />
			<ColumnDefinition Width="1*" />
		</Grid.ColumnDefinitions>
        <Button Grid.Column="0" Click="OnHideClick">Hide</Button>
        <Button Grid.Column="1" Click="OnShowClick">Show</Button>
    </Grid>
</Window>
